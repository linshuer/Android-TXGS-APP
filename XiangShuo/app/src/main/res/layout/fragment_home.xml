<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.linshuer.xiangshuo.HomeFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/top"
        android:layout_marginBottom="8dp"
        android:gravity="center|left">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="LOGO"
            android:textColor="#42a004"
            android:layout_marginLeft="20dp"
            android:textSize="16dp"/>/>
    </LinearLayout>
    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/swipeLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.example.linshuer.xiangshuo.LoadMoreListView
            android:scrollbars="none"
            android:id="@+id/home_listview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"></com.example.linshuer.xiangshuo.LoadMoreListView>
    </android.support.v4.widget.SwipeRefreshLayout>
</LinearLayout>
