<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.linshuer.xiangshuo.EditFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/top"
        android:layout_marginBottom="8dp"
        android:gravity="center|right">
        <TextView
            android:id="@+id/send"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:textColor="#1296db"
            android:layout_marginRight="20dp"
            android:text="发表"/>
    </LinearLayout>
<ScrollView
    android:scrollbars="none"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff">

    <LinearLayout
        android:background="#fff"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:id="@+id/today"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="2018/6/18"
            android:textSize="14dp" />
        <ImageView
            android:id="@+id/image"
            android:layout_width="match_parent"
            android:layout_height="240dp"
            android:scaleType="fitCenter"
            android:layout_marginTop="14dp"
            android:src="@mipmap/photo1"
            android:layout_gravity="center|top"
            android:background="#fff"/>
        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center" >

            <Spinner
                android:id="@+id/c_type"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:entries="@array/type"
                android:spinnerMode="dropdown"
                android:fadeScrollbars="true"
                android:background="@null"
                android:textSize="8dp"
                android:scrollIndicators="none"/>
            <TextView
                android:id="@+id/c_nickname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="| linshuer"
                android:textSize="16dp" />
        </LinearLayout>

        <EditText
            android:id="@+id/title"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:hint="标题"
            android:layout_gravity="center"
            android:padding="10dp"
            android:layout_marginTop="10dp"
            android:textSize="15dp"
            android:background="@drawable/editstyle"
            />

        <EditText
            android:id="@+id/content"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:hint="内容"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:textSize="15dp"
            android:background="@drawable/editstyle"
            android:padding="10dp"
            />

    </LinearLayout>
</ScrollView>

</LinearLayout>
