<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.linshuer.xiangshuo.UserInfo">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/top"
        android:gravity="center"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/back"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:layout_marginLeft="20dp"
            android:scaleType="fitXY"
            android:src="@mipmap/back" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />
        <TextView
            android:id="@+id/alertbtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:textColor="#1296db"
            android:layout_marginRight="20dp"
            android:text="保存"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="74dp"
        android:layout_marginTop="20dp"
        android:background="#fff"
        android:gravity="center|left">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="头像"
            android:layout_marginLeft="20dp"
            android:textSize="16dp"/>
        <ImageView
            android:id="@+id/headimage"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:textSize="16dp"
            android:layout_marginLeft="30dp"
            android:scaleType="fitXY"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/infotextedit"
        android:gravity="center|left">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="昵称"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="30dp"
            android:textSize="16dp"/>
        <EditText
            android:id="@+id/nickname"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:singleLine="true"
            android:outlineProvider="none"
            android:background="@drawable/infoedit"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/infotextedit"
        android:gravity="center|left">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="性别"
            android:textSize="16dp"/>
        <Spinner
            android:layout_weight="1"
            android:layout_marginLeft="22dp"
            android:layout_marginRight="10dp"
            android:id="@+id/sex_msg"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:entries="@array/sex"
            android:spinnerMode="dropdown"
            android:fadeScrollbars="true"
            android:background="@null"
            android:scrollIndicators="none"/>
        <ImageView
            android:id="@+id/sex_ico"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginRight="20dp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/infotextedit"
        android:gravity="center|left">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="城市"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="30dp"
            android:textSize="16dp"/>
        <EditText
            android:id="@+id/address"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:singleLine="true"
            android:outlineProvider="none"
            android:background="@drawable/infoedit"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/infotextedit"
        android:gravity="center|left">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="签名"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="30dp"
            android:textSize="16dp"/>
        <EditText
            android:id="@+id/autopraph"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:singleLine="true"
            android:outlineProvider="none"
            android:background="@drawable/infoedit"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#fff"
        android:gravity="center|left">
        <TextView
            android:layout_marginLeft="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="主题"
            android:singleLine="true"
            android:outlineProvider="none"
            android:background="@drawable/infoedit"
            android:textSize="16dp"/>
        <Spinner
            android:layout_weight="1"
            android:layout_marginLeft="22dp"
            android:layout_marginRight="10dp"
            android:id="@+id/theme_msg"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:textSize="14dp"
            android:layout_gravity="center"
            android:entries="@array/theme"
            android:background="@null"
            android:spinnerMode="dropdown"
            android:fadeScrollbars="false"
            android:scrollIndicators="none"/>
        <ImageView
            android:id="@+id/theme_ico"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:layout_marginRight="22dp" />
    </LinearLayout>
    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:background="#fff">
        <TextView
            android:id="@+id/signoutbtn"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:gravity="center"
            android:text="退出登录"
            android:textSize="18dp"/>

    </LinearLayout>

</LinearLayout>
